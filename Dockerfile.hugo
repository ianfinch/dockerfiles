FROM guzo/base

ARG hugo_version=0.55.3
ARG hugo_arch=64bit

RUN mkdir -p /tmp/scratch && \
    cd /tmp/scratch && \
    curl -sLO https://github.com/gohugoio/hugo/releases/download/v${hugo_version}/hugo_${hugo_version}_Linux-${hugo_arch}.tar.gz && \
    tar zxvf hugo_${hugo_version}_Linux-${hugo_arch}.tar.gz && \
    cp hugo /usr/local/bin && \
    cd /tmp/ && \
    rm -rf scratch

USER ian
EXPOSE 8080
CMD hugo --help
